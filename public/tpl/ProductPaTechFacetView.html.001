<!-- durnominal patechfacet['fecreacion'] patechfacet['numcapitulos'] patechfacet['productora'] -->
<form class="form-horizontal">
<div class="control-group">
    <label for="durnominal" class="control-label">duración nominal (mín):</label>

    <div class="controls">
        <input id="durnominal"   name="durnominal"   type="text" value="<%= durnominal %>" autofocus >
        <span class="help-inline"></span>
    </div>
</div>

<div class="control-group">
    <label for="fecreacion" class="control-label">fecha de creación (dd/mm/aaaa):</label>

    <div class="controls">
        <input id="fecreacion"   name="fecreacion"   type="text" value="<%= fecreacion %>" >
        <span class="help-inline"></span>
    </div>
</div>

<div class="control-group">
    <label for="numcapitulos" class="control-label">Cantidad de capitlos/unitarios:</label>

    <div class="controls">
        <input id="numcapitulos" name="numcapitulos" type="text" value="<%= numcapitulos %>" >
        <span class="help-inline"></span>
    </div>
</div>

<div class="control-group">
    <label for="productora" class="control-label">casa productora:</label>

    <div class="controls">
      <input type="text" class="input-large" id="productora" name="productora" 
          placeholder='casa productora' value="<%= productora %>"/>
      <span class="help-inline"></span>
    </div>
</div>

<div class="row-fluid status-bar">
    <div class="span12">
        <div class="alert alert-success" style="display: none">
            <b>INFO:</b> El registro se guardó exitosamente
        </div>
    </div>
</div>
</form>
